{% extends "templates/login_base.jinja2" %}

{% block content %}
<div id="logo" class="center">
	<a href="/" ><img src="{{ request.static_url('whatyousay:static/logo-signup.gif') }}" alt="注册听说"/></a>
</div>
<form action="/signup" class="new_user_sessions center" id="new_user_sessions" method="POST" >
		<p>
		<label for="user_session_login">邮箱</label>
		<br/>
		<input id="user_session_login" name="user_session[login]" size="30" type="text" class="input_text"/>
		<span class="errro none"></span>
		</p>
		<p>
		<label for="user_session_password">密码</label>
		<br/>
		<input id="user_session_password" name="user_session[password]" size="30" type="password" class="input_text"/>
		<span class="errror none"></span>
		</p>
		<p>
		<label for="user_session_password">确认密码</label>
		<br/>
		<input id="user_session_password_ensure" name="user_session[ensuer_password]" size="30" type="password" class="input_text"/>
		</p>
		<p>
		<input class="button" name="commit" type="submit" value="注册"/>
		</p>
</form>
<p id="signup">
	已有账号？<a href="/login">点这里登录</a>
</p>
{% endblock %}