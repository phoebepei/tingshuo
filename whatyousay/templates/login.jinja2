{% extends 'templates/login_base.jinja2' %}

{% block content %}
<div id="logo" class="center">
	<a href="/" ><img src="{{ request.static_url('whatyousay:static/logo-login.png') }}" alt="登陆听说"/></a>
</div>
{% if request.session.peek_flash() %}
	<p id = "flash">
		{% set flash = request.session.pop_flash() %}
			{% for message in flash %}
				{{ message }} <br/>
			{% endfor %}
	</p>
{% endif %}
<form action="/login" class="new_user_sessions center" id="new_user_sessions" method="POST" >
		<p>
		<label for="user_session_login">邮箱</label>
		<br/>
		<input id="user_session_login" name="user_session[login]" size="30" type="text" class="input_text"/>
		</p>
		<p>
		<label for="user_session_password">密码</label>
		<br/>
		<input id="user_session_password" name="user_session[password]" size="30" type="password" class="input_text"/>
		</p>
		<p>
		<input checked="checked" id="user_session_remember_me" name="user_session[remember_me]" type="checkbox" value=1/>
		<label for="user_session_remember_me">记住我</label>
		</p>
		<p>
		<input class="button" name="commit" type="submit" value="登入"/>
		<a href="/password_reset/new" class="new_password">忘记密码？</a>
		</p>
</form>
<p id="signup">
	还没有注册？<a href="/signup">点这里</a>
</p>
{% endblock %}
